// manifest.json
{
  "manifest_version": 3,
  "name": "My WhatsApp Online Notifier",
  "description": "Plays a sound when a contact comes online in WhatsApp Web",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["background.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
