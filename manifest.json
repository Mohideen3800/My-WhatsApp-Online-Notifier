{
  "manifest_version": 2,
  "name": "WhatsApp Online Tracker",
  "description": "Track the online status of your WhatsApp contacts",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications",
    "https://web.whatsapp.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
